<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ListOfBottomNavigationButtonActivity">

    <Button
        android:id="@+id/simBNBBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Bottom Navigation Bar"/>
    <Button
        android:id="@+id/pinBNBBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinterest Bottom Navigation Bar"/>
    <Button
        android:id="@+id/fabWithBNBBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fab With Bottom Navigation Bar"/>
</LinearLayout>